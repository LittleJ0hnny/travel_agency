<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.lv297.travel_agency.database.entities.Country" table="country">
        <id column="country_id" name="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property column ="name" name="name" type="java.lang.String"/>
        <set name="cities" table="city">
            <key column="country_country_id"/>
            <one-to-many class="com.lv297.travel_agency.database.entities.City"/>
        </set>
    </class>
</hibernate-mapping>