<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <entity class="com.lv297.travel_agency.database.entities.Country" name="Country" >
        <table name="country"/>
        <attributes>
            <id name ="id">
                <column name="country_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="name" >
                <column name="name" unique="true" nullable="false" length="50"/>
            </basic>
            <one-to-many name="visas" fetch="LAZY" mapped-by="countryId"/>
            <one-to-many name="cities" fetch="LAZY" mapped-by="countryId"/>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.City" name="City">
        <table name="city"/>
        <attributes>
            <id name ="id">
                <column name="city_id" nullable="false" unique="true" />
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="countryId">
                <column name="country_country_id" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="name" unique="true" nullable="false" length="80"/>
            </basic>
            <one-to-many name="hotels" fetch="LAZY" mapped-by="cityId"/>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.Hotel" name="Hotel">
        <table name="hotel"/>
        <attributes>
            <id name ="id">
                <column name="hotel_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="cityId">
                <column name="city_city_id" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="name" nullable="false" length="70"/>
            </basic>
            <one-to-many name="rooms" fetch="LAZY" mapped-by="hotelId"/>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.Room" name="Room">
        <table name="room"/>
        <attributes>
            <id name ="id">
                <column name="room_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="hotelId">
                <column name="hotel_hotel_id" nullable="false"/>
            </basic>
            <basic name="type">
                <column name="type" nullable="false" length="20"/>
            </basic>
            <basic name="price">
                <column name="price" nullable="false"/>
            </basic>
            <basic name="num_of_beds">
                <column name="number_of_bed" nullable="false"/>
            </basic>
            <one-to-many name="bookings" fetch="LAZY" mapped-by="roomId"/>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.Client" name="Client">
        <table name="client"/>
        <attributes>
            <id name ="id">
                <column name="client_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="firstname">
                <column name="firstname" nullable="false" length="50"/>
            </basic>
            <basic name="lastname">
                <column name="lastname" nullable="false" length="50"/>
            </basic>
            <basic name="bithday">
                <column name="date_birthday" column-definition="DATE" nullable="false" />
            </basic>
            <basic name="citizenship">
                <column name="citythenship" nullable="false" length="80"/>
            </basic>
            <one-to-many name="visas" fetch="LAZY" mapped-by="clientId"/>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.Visa" name="Visa">
        <table name="visa"/>
        <attributes>
            <id name ="id">
                <column name="visa_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="countryId">
                <column name="country_country_id" nullable="false" />
            </basic>
            <basic name="clientId">
                <column name="client_client_id" nullable="false"/>
            </basic>
            <basic name="validFrom">
                <column name="valid_from" column-definition="DATE" nullable="false"/>
            </basic>
            <basic name="validTo">
                <column name="valid_to" column-definition="DATE" nullable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="com.lv297.travel_agency.database.entities.Booking" name="Booking">
        <table name="booking"/>
        <attributes>
            <id name ="id">
                <column name="booking_id" nullable="false" unique="true"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="clientId">
                <column name="client_client_id" nullable="false"/>
            </basic>
            <basic name="hotelId">
                <column name="hotel_hotel_id" nullable="false"/>
            </basic>
            <basic name="roomId">
                <column name="room_room_id" nullable="false"/>
            </basic>
            <basic name="bookingFrom">
                <column name="booking_from" column-definition="DATE" nullable="false" unique="true"/>
            </basic>
            <basic name="bookingTo">
                <column name="booking_to" column-definition="DATE" nullable="false" unique="true"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>